# Twitter OAuth 1.0a credentials
API_KEY=
API_SECRET_KEY=
ACCESS_TOKEN=
ACCESS_TOKEN_SECRET=
BEARER_TOKEN=

# Cardano DB-Sync PostgreSQL connection string
DB_SYNC_URL=postgresql://user:pass@host:5432/cexplorer

# Blockfrost webhook auth token (for signature verification)
BLOCKFROST_WEBHOOK_AUTH_TOKEN=

# Feature flags
TWEET_POSTING_ENABLED=false
X_WEBHOOK_ENABLED=false

# LLM triage (used when X_WEBHOOK_ENABLED=true)
LLM_MODEL=
LLM_ISSUE_CONFIDENCE_THRESHOLD=0.80

# X webhook provisioning helper script
X_WEBHOOK_CALLBACK_URL=https://YOUR_SERVICE_URL/x/webhook

# GitHub integration (for rationale archiving)
GITHUB_TOKEN=
GITHUB_REPO=semsorock/cardano-gov-actions-bot

# Firestore integration (for persistent runtime state)
# Leave FIRESTORE_PROJECT_ID empty to use Application Default Credentials project.
FIRESTORE_PROJECT_ID=
FIRESTORE_DATABASE=(default)
